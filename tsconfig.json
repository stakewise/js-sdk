{
  "compilerOptions": {
    "target": "es5",
    "composite": true,
    "outDir": "./dist",
    "sourceMap": true,
    "declaration": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true,
    "strictNullChecks": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "baseUrl": "./packages",
    "paths": {
      "@stakewise-sdk/common/*": ["common/src/*"],
      "@stakewise-sdk/tokens/*": ["tokens/src/*"],
      "@stakewise-sdk/contracts/*": ["contracts/src/*"]
    }
  },
  "references": [
    {
      "path": "packages/common"
    },
    {
      "path": "packages/contracts"
    },
    {
      "path": "packages/tokens"
    }
  ]
}
