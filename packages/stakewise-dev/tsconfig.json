{
  "compilerOptions": {
    "baseUrl": "./",
    "module": "esnext",
    "target": "esnext",
    "moduleResolution": "node",
    "sourceMap": true,
    "allowJs": true,
    "noEmit": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "allowUnreachableCode": false,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "jsx": "preserve",
    "lib": [
      "dom",
      "esnext"
    ],
    "paths": {
      "classnames": [ "node_modules/classnames" ] // webstorm doesn't autocomplete this module w/o this line
    }
  },
  "include": [
    "src/**/*",
  ]
}
